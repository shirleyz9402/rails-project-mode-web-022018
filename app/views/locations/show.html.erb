<main role="main">

  <!-- Main jumbotron for a primary marketing message or call to action -->

    <div class="jumbotron row">
        <div class="col-md-5 ">
          <h1 class="page-header"><%= @location.name %></h1><br>
          <p>This is a template for a simple marketing or informational website. It includes a large callout called a jumbotron and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-4">
          <h1><%= @creature.name %></h1><br>
          <p><b>Size:</b> <%= @creature.size %></p>
          <p><b>Type:</b> <%= @creature.creature_type %></p>
          <p><b>Can fly:</b> <%= @creature.fly ? "yep" : "nope" %></p>
          <p><b>Can swim:</b> <%= @creature.swim ? "yep" : "nope" %></p>
        </div>
      </div>
<br><br>
  <div class="row">
    <!-- Example row of columns -->
    <div class="container">

      <% @location.edibles.each do |edible| %>
        <% if !edible.eaten %>

          <div class="col-md-4">
            <%= form_tag(edible_path(edible), method: :put) do %>
              <h2><%=label_tag edible.name %>
              <%= hidden_field_tag :edible_id, edible.id%>
              <%=submit_tag "Eat", class: "btn btn-secondary"  %>
              </h2>
            <% end %>
            <!-- <p><a class="btn btn-secondary" href="#" role="button">Eat</a></p> -->
          </div>

        <% end %>
      <% end %>

      <% if @location.id != 1 %>
      <div class="col-md-1"> </div>
        <div class="col-md-3">
          <h3>Where u wanna go?</h3> <br><br>
            <%= form_tag '/next', method: :post do %>
              <p class="text-center">
              <%= collection_select(:next, :next_id, Location.all, :id,:name)%>
               <%= submit_tag "Go", class: "btn btn-secondary" %>
              </p>
            <% end %>
        </div>
      <% end %>
      <% @location.decisions.each do |decision| %>
      <div class="col-md-6">
          <%= form_tag(decision_path(decision), method: :put) do %>
          <h3 class="text-center"><%= decision.content %>
          <%= hidden_field_tag :decision_id, decision.id%>
          <%=submit_tag "Pick me!" ,class: "btn btn-secondary"  %>
        </h3>
          <% end %>
          </div>
      <% end %>


