<br>
<%= form_for @user, url: login_path, method: :post do |f| %>
<div class="container row">

<div class="col-md-3">

  <%= f.label :name, "Name: " %>
  <%= f.text_field :name %>

</div>
<div class="col-md-6">

  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %>


  <%= f.submit "log in" %>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
</div>
</div>
<% end %>
