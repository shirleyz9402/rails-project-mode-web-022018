<br>
<% if flash[:alert] %>
  <div class="alert alert-danger container-fluid" role="alert"> <h4><strong><%= flash[:alert] %> </strong></h4> </div>
<% end %>
<%= form_for @user, url: login_path, method: :post do |f| %>
  <div class="container-fluid " id="other">

    <div class="item text-left">

      <%= f.label :name, "Name: " %>
      <%= f.text_field :name, class:'form-control'  %>

    </div>
    <div class="item text-left">

      <%= f.label :password, "Password:" %>
      <%= f.password_field :password ,class:'form-control'%>

      <br>
      <div class="item">
      <strong><%= f.submit "Login", class: "btn btn-secondary"%>
      Or <%= link_to(controller: 'users', action: 'new') { 'Sign Up' } %></strong>

      </div>
    </div>
  </div>
<% end %>
